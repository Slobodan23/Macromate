<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <!-- Header Fragment - Fixed at top -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/headerFragment"
        android:name="com.example.macromate.fragments.HeaderFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_header" />

    <!-- Scrollable content area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/meniFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date Picker Fragment -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/datePickerFragment"
                android:name="com.example.macromate.fragments.DatePickerFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:layout="@layout/fragment_date_picker" />

            <!-- Macros Fragment -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/macrosFragment"
                android:name="com.example.macromate.fragments.MacrosFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:layout="@layout/fragment_macros" />

            <!-- Obroci Fragment -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/obrociFragment"
                android:name="com.example.macromate.fragments.ObrociFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_obroci" />

        </LinearLayout>

    </ScrollView>

    <!-- Menu Fragment - Fixed at bottom -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/meniFragment"
        android:name="com.example.macromate.fragments.MeniFragment"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout="@layout/fragment_meni" />

</androidx.constraintlayout.widget.ConstraintLayout>
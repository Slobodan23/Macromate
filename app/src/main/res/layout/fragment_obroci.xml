<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="16dp"
    tools:context=".fragments.ObrociFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Meals"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal" />

    <!-- Dorucak Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breakfast"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dorucakRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/emptyDorucakText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No breakfast items added yet"
        android:textColor="@color/hint_color"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Rucak Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rucakRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/emptyRucakText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No lunch items added yet"
        android:textColor="@color/hint_color"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Vecera Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinner"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/veceraRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/emptyVeceraText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No dinner items added yet"
        android:textColor="@color/hint_color"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Uzina Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snacks"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/uzinaRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:id="@+id/emptyUzinaText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No snack items added yet"
        android:textColor="@color/hint_color"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

</LinearLayout>
